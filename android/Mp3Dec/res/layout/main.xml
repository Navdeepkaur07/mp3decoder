<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Select Mp3 File For Analysis"
    />
<TextView 
    android:layout_marginTop = "20dp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Input Mp3 File Path:"
    />
<EditText android:id="@+id/etMp3Path"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
<TextView 
    android:layout_marginTop = "20dp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Output WAV File Path:"
    />
<EditText android:id="@+id/etWavPath"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
<Button android:id="@+id/btnDecode"
    android:layout_marginTop = "20dp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Decode" />
</LinearLayout>

